{
  "name": "dieHantar-mobile Primary Codespace",
  "image": "mcr.microsoft.com/vscode/devcontainers/python:3.12",
  "features": {
    "ghcr.io/devcontainers/features/node:1": {
      "version": "18"
    },
    "ghcr.io/devcontainers/features/docker-in-docker:1": {},
    "ghcr.io/devcontainers/features/git:1": {}
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.pylint",
        "ms-python.black-formatter",
        "ms-toolsai.jupyter",
        "bradlc.vscode-tailwindcss",
        "ms-vscode.vscode-json",
        "dart-code.dart-code",
        "dart-code.flutter",
        "ms-vscode-remote.remote-containers"
      ],
      "settings": {
        "python.defaultInterpreterPath": "/workspaces/dieHantar-mobile/.venv/bin/python",
        "python.terminal.activateEnvironment": true,
        "files.watcherExclude": {
          "**/.git/objects/**": true,
          "**/.git/subtree-cache/**": true,
          "**/node_modules/**": true,
          "**/.venv/**": true
        }
      }
    }
  },
  "forwardPorts": [8000, 3000, 5000, 8080],
  "postCreateCommand": "chmod +x .devcontainer/setup.sh && .devcontainer/setup.sh",
  "workspaceMount": "source=${localWorkspaceFolder},target=/workspaces/dieHantar-mobile,type=bind",
  "workspaceFolder": "/workspaces/dieHantar-mobile"
}